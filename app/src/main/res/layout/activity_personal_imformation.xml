<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    tools:context="com.example.lenovo.weixing.Activity.PersonalImformationActivity">
<RelativeLayout
    android:id="@+id/my_icon_layout"
    android:background="#ffffff"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="头像"
        android:textSize="16sp"
        android:textColor="#111111"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:layout_margin="10dp"
        android:src="@drawable/my_head_icon"
        android:layout_marginRight="10dp"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/head_icon_setting"
        android:layout_width="70dp"
        android:layout_height="70dp" />
</RelativeLayout>
    <LinearLayout
        android:id="@+id/my_nickname_layout"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="昵称"
            android:textSize="16sp"
            android:textColor="#111111"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/my_nickname_setting"
            android:text="无量诚意"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:gravity="right"
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_id_layout"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="微信号"
            android:textSize="16sp"
            android:textColor="#111111"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/my_id_setting"
            android:text="hc740448122"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:gravity="right"
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_QR_code_layout"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="二维码名片"
            android:textSize="16sp"
            android:textColor="#111111"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:background="@drawable/qr"
            android:id="@+id/my_QR_code"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_address_layout"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="我的地址"
            android:textSize="16sp"
            android:textColor="#111111"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/my_address_setting"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:gravity="right"
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_sex_layout"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="性别"
            android:textSize="16sp"
            android:textColor="#111111"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/my_sex_setting"
            android:text="男"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:gravity="right"
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_area_layout"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="地区"
            android:textSize="16sp"
            android:textColor="#111111"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/my_area_setting"
            android:text="广东  广州"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:gravity="right"
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_signature_layout"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="个性签名"
            android:textSize="16sp"
            android:textColor="#111111"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/my_signature_setting"
            android:text="未填写"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:gravity="right"
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
