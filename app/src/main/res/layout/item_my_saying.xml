<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="right"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="3dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="gone"
            android:gravity="center_vertical"
            android:id="@+id/my_sound_layout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/my_sound_length"
                android:text="5"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Button
            android:id="@+id/my_sound"
            android:background="@drawable/sound_background_my"
            android:layout_width="120dp"
            android:layout_height="60dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="right"
            android:id="@+id/my_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:maxWidth="300dp"
                android:id="@+id/my_text"
                android:layout_gravity="center"
                android:minHeight="50dp"
                android:minWidth="70dp"
                android:padding="13dp"
                android:background="@drawable/text_background_my"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/my_icon"
            android:padding="7dp"
            android:src="@drawable/icon"
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </LinearLayout>

</LinearLayout>
